
<h5 class="mt-4">Add Comments</h5>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username, {:class => 'form-control'} %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, {:class => 'form-control'} %>
  </p>

  <p>
    <%= f.submit({:class => 'btn btn-light border rounded'}) %><br />
  </p>
<% end %>